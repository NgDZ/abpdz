/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["esnext", "dom"],
    "paths": {
      "@abpdz/ng.core": ["dist/core/core", "dist/core"],
      "@abpdz/ng.account": ["dist/account/account", "dist/account"],
      "@abpdz/ng.identity": ["dist/identity/identity", "dist/identity"],
      "@abpdz/ng.permission-management": [
        "dist/permission-management/permission-management",
        "dist/permission-management"
      ],
      "@abpdz/ng.setting-management": [
        "dist/setting-management/setting-management",
        "dist/setting-management"
      ],
      "@abpdz/ng.theme.shared": [
        "dist/theme-shared/theme-shared",
        "dist/theme-shared"
      ],
      "@abpdz/ng.theme.basic": [
        "dist/theme-basic/theme-basic",
        "dist/theme-basic"
      ],
      "@abpdz/ng.theme.material": [
        "dist/theme-material/theme-material",
        "dist/theme-material"
      ],
      "@abpdz/utils": [
        "dist/utils/utils",
        "dist/utils"
      ],
      "audit": [
        "dist/audit/audit",
        "dist/audit"
      ],
      "breeze": [
        "dist/breeze/breeze",
        "dist/breeze"
      ],
      "chat": [
        "dist/chat/chat",
        "dist/chat"
      ],
      "cms": [
        "dist/cms/cms",
        "dist/cms"
      ],
      "demos": [
        "dist/demos/demos",
        "dist/demos"
      ],
      "enums": [
        "dist/enums/enums",
        "dist/enums"
      ],
      "filemanagement": [
        "dist/filemanagement/filemanagement",
        "dist/filemanagement"
      ],
      "pages": [
        "dist/pages/pages",
        "dist/pages"
      ],
      "saas": [
        "dist/saas/saas",
        "dist/saas"
      ],
      "texttemplates": [
        "dist/texttemplates/texttemplates",
        "dist/texttemplates"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "disableTypeScriptVersionCheck": true,
    "fullTemplateTypeCheck": true
  }
}
